<h1>Filter By <%= @cate_name[0].category %></h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Date</th>
      <th scope="col">Category</th>
    </tr>
  </thead>
  <tbody>
  <% @filter_category.events.each do |filter_cat| %>
    <tr>
      <th scope="row"> <%= filter_cat.id %> </th>
      <td><%= filter_cat.name %></td>
      <td><%= filter_cat.description %></td>
      <td><%= filter_cat.event_date %></td>
      <td><%= Category.select("category").where("id=?",filter_cat.category_id)[0].category %></td>
    </tr>
    <% end %>
  </tbody>
</table>