<p id="notice"><%= notice %></p>

<div class="row  mt-4">
      <div class="col-lg-2">
              <p> <strong>Name:</strong> </p>
      </div>
       <div class="col-lg-2">
                <%= @event.name %>
      </div>
</div>

<div class="row  mt-2">
      <div class="col-lg-2">
              <p> <strong>Description:</strong> </p>
      </div>
       <div class="col-lg-2">
                <%= @event.description %>
      </div>
</div>

<div class="row  mt-2">
      <div class="col-lg-2">
              <p> <strong>Category:</strong> </p>
      </div>
       <div class="col-lg-2">
                <%= @category[0].category %>
      </div>
</div>

<div class="row  mt-2">
      <div class="col-lg-2">
              <p> <strong>Event date:</strong> </p>
      </div>
       <div class="col-lg-2">
                <%= @event.event_date %>
      </div>
</div>



<%= link_to 'Back', events_path, class:"btn btn-success", :style => "color:white" %>

<%= form_with model: [@event, @event.comments.build] do |form| %>
     <div class="row mt-5">
         <div class="col-lg-3">
               <div class="form-group">
                    <%= form.label :comment, "comment" %>
                    <%= form.text_field :comment, class:"form-control" %>
               </div>
         </div>
     </div>

      <div class="row">
         <div class="col-lg-3">
               <div class="form-group">
                    <%= form.label :user_id, "user_id" %>
                    <%= form.text_field :user_id, class:"form-control", :readonly => true, value:current_user.id if current_user  %>
               </div>
         </div>
     </div>

      <div class="row">
         <div class="col-lg-3">
               <div class="form-group">
                    <%= form.label :event_id, "event_id" %>
                    <%= form.text_field :event_id, class:"form-control", :readonly => true %>
               </div>
         </div>
     </div>

      <div class="row mt-3">
         <div class="col-lg-3">
               <div class="form-group">
                    <%= form.submit "Add Comment", class:"btn btn-success" %>
               </div>
         </div>
     </div>

<% end %>

<h1 class="text-center mt-5">Comments </h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Comment ID</th>
      <th scope="col">Comment</th>
      <th scope="col">Email</th>
      <th scope="col">Event Name</th>
    </tr>
  </thead>
  <tbody>
  <%  @comments.each do |comment| %>
    <tr>
      <th scope="row"><%= comment.id %></th>
      <td> <%= comment.comment %> </td>
      <td><%= comment.user.email %></td>
      <td><%= comment.event.name %></td>
    </tr>
    <% end %>
  </tbody>
</table>

